{
  "name": "polymer-lib-loader",
  "version": "1.0.0",
  "description": "Polymer (ES6) external (or internal) library loader component",
  "main": "lib-loader.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LasaleFamine/polymer-lib-loader.git"
  },
  "scripts": {
    "start": "yarn build && http-server .",
    "build": "webpack --config test/webpack.config.js",
    "test": "xo && yarn build && wct",
    "postinstall": "ln -s node_modules bower_components",
    "fix": "xo --fix"
  },
  "xo": {
    "space": true,
    "envs": [
      "browser"
    ],
    "ignores": [
      "test/**"
    ]
  },
  "files": [
    "src"
  ],
  "author": "Alessio Occhipinti @lasalefamine",
  "license": "MIT",
  "devDependencies": {
    "http-server": "0.10.0",
    "web-component-tester": "6.1.3",
    "webpack": "3.5.5",
    "xo": "0.18.2"
  },
  "dependencies": {
    "@polymer/polymer": "LasaleFamine/polymer#3.0-preview"
  }
}
